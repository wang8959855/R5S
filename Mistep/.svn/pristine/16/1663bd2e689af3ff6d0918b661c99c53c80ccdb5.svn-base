    ShareTypeQQ = 200,
    ShareTypeKongJian,
    ShareTypeWeiXin,
    ShareTypePengYouQuan,
    ShareTypeWeiBo,
    ShareTypeFacebook,
    ShareTypeTwitter
}ShareType;

@end

